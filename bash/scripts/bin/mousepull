if [ ! -f ~/.mousepull.dat ]; then
    echo "$1 $2" > ~/.mousepull.dat
else
    vars=($(cat ~/.mousepull.dat))
    strt=($(cat ~/startcoords.dat))
    awk -v x=$1,x0=${vars[0]},x1=${strt[0]},y=$2,y0=${vars[1]},y1=${strt[1]} 'BEGIN {print (x - x0) / 2; print x x0 x1}'
    #(y-y0)/2 + y1}'
    #'{print x , "," , x1 , "," , x0 , "," , y , "," , y1 , "," , y0}'
fi

